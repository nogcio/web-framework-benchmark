<header id="wfb-header" class="fixed top-0 left-0 right-0 z-50 border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60" data-wfb-component="header">
    <div class="px-4 md:px-6 py-3 flex flex-col gap-3">
        <div class="flex items-center gap-4">
            {% include "components/header/brand.html.j2" %}

            {% if page.show_header_controls %}
            <div class="hidden md:flex flex-1 justify-center">
                {% include "components/header/test-nav.html.j2" %}
            </div>

            <div class="flex items-center gap-3 ml-auto">
                {% include "components/header/env-switcher.html.j2" %}
                {% include "components/header/methodology-link.html.j2" %}
                {% include "components/header/github-link.html.j2" %}
            </div>
            {% else %}
            <div class="flex items-center gap-3 ml-auto">
                <a href="/?run={{ page.active_run_id }}&env={{ page.active_env }}&test={{ page.active_test }}"
                    class="inline-flex items-center gap-2 rounded-md border border-border bg-background px-3 py-2 text-xs font-semibold text-foreground shadow-sm transition hover:bg-accent hover:text-accent-foreground">
                    {{ "arrow-left"|icon("h-4 w-4")|safe }}
                    Back to results
                </a>
                {% include "components/header/methodology-link.html.j2" %}
                {% include "components/header/github-link.html.j2" %}
            </div>
            {% endif %}
        </div>
    </div>
</header>
