<aside class="wfb-only-desktop-flex flex-col shrink-0 w-36 border-r border-border/50 bg-transparent px-2 py-3" data-wfb-component="sidebar">
    <div class="px-1.5 pb-2 text-[10px] font-semibold uppercase tracking-[0.2em] text-muted-foreground">
        Runs
    </div>
    <div class="flex-1 overflow-y-auto pr-1 space-y-2">
        {% for run in page.runs %}
        {% set is_active = page.active_run_id.as_str() == run.id.as_str() %}
        <a href="/?run={{ run.id }}&env={{ page.active_env }}&test={{ page.active_test }}"
            class="group relative flex flex-col items-start w-full rounded-lg border px-3 py-2 text-left transition-all
            {% if is_active %}
                border-primary/50 bg-primary/10 text-foreground shadow-[0_10px_20px_-14px_rgba(37,99,235,0.6)]
            {% else %}
                border-border/60 text-muted-foreground hover:bg-muted/70 hover:text-foreground
            {% endif %}">
            <div class="flex items-center gap-2">
                <span class="inline-flex h-2 w-2 rounded-full
                    {% if is_active %}bg-primary shadow-[0_0_0_3px_rgba(59,130,246,0.2)]{% else %}bg-muted-foreground/50 group-hover:bg-foreground/70{% endif %}"></span>
                <span class="text-sm leading-tight font-semibold">Run {{ run.id }}</span>
            </div>
            <span class="text-[10px] text-muted-foreground/80 mt-1">{{ run.created_at_fmt }}</span>
        </a>
        {% endfor %}
    </div>
</aside>